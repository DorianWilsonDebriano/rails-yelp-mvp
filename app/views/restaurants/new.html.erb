<div class="container">
  <h3>Add a new restaurant</h3>
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name  %>
    <%= f.input :address  %>
    <%= f.input :phone_number  %>
    <%= f.input :category  %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
  <br>
  <%= link_to 'Back', restaurants_path %>
</div>
